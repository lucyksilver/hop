                <p><%= choice.beer.name%></p>
                <p class="text-gray"><%= (choice.beer.closest_distance(current_user) * 1.2).round(2) %> miles away</p>
              </div>
              <div class="beer-card-tags">
                <% choice.beer.tags.each do |tag| %>
                  <!-- logic to do later (Arthur) -->
                  <span class="beer-tag beer-active-tag"><%= tag.name %></span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>




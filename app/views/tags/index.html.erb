<div class="tags-container">
  <h1 class="tags-header mb-5">What's your flavour?</h1>
  <%= simple_form_for :search, url: beers_path, method: :get do |f| %>
    <fieldset class="form-group check_boxes required search_tags">
      <input type="hidden" name="search[tags][]" value="">
      <div class="tags-form-group">
      <% @tags.each do |tag| %>
        <div class="tag-card">
          <input class="d-none" type="checkbox" value="<%= tag.id %>" name="search[tags][]" id="search_tags_<%= tag.id %>">
          <label class="form-check-label collection_check_boxes" for="search_tags_<%= tag.id %>"><%= tag.name %></label>
        </div>
      <% end %>
      </div>
    </fieldset>
    <div class="tag-btn mt-5">
      <%= f.submit %>
    </div>
  <% end %>
</div>

<div class="hop-it-btn-container">
      <span class="left-square"></span>
      <%= link_to "HOP IT!", tags_path, class: "hop-it-btn" %>
      <span class="right-square"></span>
    </div>

<div class="choice-show-container">
  <div class="item-left-half">
    <div class="content">
      <h1>Your Local Brew!</h1>
      <h3>Enjoy your <%= @choice.beer.name %> at <%= @choice.pub.name %></h3>

    </div>
  </div>
  <div class="item-right-half">
    <div id="map"
       style="width: 100%;
       height: 600px;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>

<%= simple_form_for [beer, choice] do |f| %>
  <% if params[:view_all] %>
    <% array_of_pubs = beer.pubs %>
  <% else %>
    <% array_of_pubs = beer.pubs.sample(3) %>
  <% end %>
  <%= f.input :pub, as: :radio_buttons,
  collection: array_of_pubs,
  wrapper_hmtl: { class: 'inline-radio' } %>

  <%= f.submit %>
<% end %>

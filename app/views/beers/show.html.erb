
<div class="beer-show-container">
  <div class="beer=left-half">
      <div class="content">
        <h1><%= @beer.name %></h1>
        <p>Beer description: <%= @beer.description %></p>

        <p>Tags that belong to this beer:</p>
          <% @beer.tags.each do |tag| %>
          <%= tag.name %>
          <% end %>
      </div>

      <div>
        <h2>Choose your pub</h2>
          <div class="choice-form">
            <%= render "choices/form", choice: @choice, beer: @beer %>
          </div>
      </div>
  </div>
  <div class="item-right-half" style="background-image: url('https://images.unsplash.com/photo-1498058942544-e1ff4563ac64?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80')">
    </div>





<div class="beer-show-container">
  <div class="beer-left-half" style="background-image: url('https://res.cloudinary.com/dtoehsudt/image/upload/v1582804201/<%= @beer.photo.key %>')">
  </div>

  <div class="beer-right-half">
      <div class="content">
        <div class="beer-info">
          <p class="show-header"><%= @beer.name %></p>
          <% if @beer.liked_by(current_user) %>
            <%= link_to like_path(@beer.likes.find_by(user: current_user)), method: :delete, class: "liked heart" do %>
            <i class="fas fa-heart heart"></i>
            <% end %>
          <% else %>
            <%= link_to beer_likes_path(@beer), method: :post, class: "like heart" do%>
            <i class="far fa-heart heart"></i>
            <% end %>
          <% end %>
        </div>
        <div>
          <p class="show-description"><%= @beer.description %></p>
        </div>
        <div class="choice-form">
          <p class="font-heading">Choose your pub</p>
          <%= render "choices/form", choice: @choice, beer: @beer, pubs: @pubs %>
        </div>
      </div>
  </div>
</div>

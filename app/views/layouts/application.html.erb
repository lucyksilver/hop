<!DOCTYPE html>
<html>
  <head>
    <title>HOP! The fun way to discover local beer that you love!</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
    <script type="text/javascript" src="https://addevent.com/libs/atc/1.6.1/atc.min.js" async defer></script>
  </head>

  <body>
    <%#= render 'shared/background-div' unless current_page?(root_path) %>
   <% unless current_page?(root_path) || controller_name == 'beers' && action_name == 'show' || controller_name == 'choices' && action_name == 'show' %>
      <div class="all-page-background">
    <% else %>
      <div>
    <% end %>
      <%= render 'shared/navbar' unless current_page?(root_path) || controller_name == 'beers' && action_name == 'show' || controller_name == 'choices' && action_name == 'show'%>
      <%= render 'shared/alternative_navbar' if controller_name == 'beers' && action_name == 'show' || controller_name == 'choices' && action_name == 'show' %>
      <%= yield %>
      <%= render 'shared/flashes' %>
      </div>

    <script> </script>
  </body>
</html>
